<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece6f0"  tools:context=".RegistrarPagoFinalActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="30dp"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btnVolverAtrasFinal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/buttonpurple_fondo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRAR PAGO"
                    android:textColor="@color/black"  android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/rounded_white_background"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECCIONAR"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/radio_group_cobro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radio_efectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EFECTIVO"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/radio_tarjeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARJETA DE CRÃ‰DITO"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*pago con tarjeta recargo de 10%"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginBottom="30dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinput_forma_cobro"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:boxBackgroundColor="#6750A3"
                    app:hintTextColor="#FFFFFF"
                    app:placeholderTextColor="#FFFFFF"       app:boxStrokeColor="#FFFFFF"             app:boxStrokeWidth="0dp">               <AutoCompleteTextView
                    android:id="@+id/text_forma_cobro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FORMA DE COBRO"
                    android:inputType="none"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MONTO FINAL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/edit_monto_final"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Input"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/edittext_fondo_claro"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRMA ADMINISTRADOR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/edit_firma_administrador"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Input"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/edittext_fondo_claro"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="PAGAR"
                android:textSize="20sp"
                android:background="@drawable/buttonpurple_fondo"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>