<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/pdf_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_cd"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo del Club" />

    <TextView
        android:id="@+id/pdf_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARNET DE SOCIO"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/pdf_nombre_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Apellido"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/pdf_dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI: 12345678"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/pdf_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo: email@example.com"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/pdf_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel: 11223344"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

</LinearLayout>